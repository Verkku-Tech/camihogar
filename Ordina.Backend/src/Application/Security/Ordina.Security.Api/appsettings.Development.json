{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "ordina_db"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyForJWTTokenGenerationThatShouldBeAtLeast32CharactersLong",
    "Issuer": "Ordina.Security.Api",
    "Audience": "Ordina.Client",
    "ExpiryInMinutes": "480"
  },
  "Swagger": {
    "Enabled": "${SWAGGER_ENABLED:true}"
  },
  "Features": {
    "EnableHealthChecks": "${ENABLE_HEALTH_CHECKS:true}",
    "EnableCors": "${ENABLE_CORS:true}",
    "EnableRateLimiting": "${ENABLE_RATE_LIMITING:false}"
  }
}
